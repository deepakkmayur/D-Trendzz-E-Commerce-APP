<!-- Header -->
{{>user-header-secondary}}
{{!-- </header> --}}
<div
	style="  margin-top: -75px;height: 100vh;  background: rgb(194,195,195);background: linear-gradient(103deg, rgba(194,195,195,1) 7%, rgba(180,255,244,1) 71%, rgba(225,226,226,1) 100%);">

	<div class="container " style="margin-top:7% ;margin-bottom: 20%;">

		<table id="table_id" class="display">
			<thead>

				<tr>
                <th>NO</th>
					<th>Name</th>
					<th>Product name</th>

					<th>Date</th>
					<th>Price</th>
					<th>Status</th>
					<th></th>
					<th>Track order</th>
					<th>View item</th>



				</tr>
			

			</thead>
			<tbody>
				{{#each orderlistProducts}}
				<tr>
				{{!-- <h1>{{this.orderDetails.products.product._id}}</h1> --}}
						
			
               <td>{{inc @index}}</td>
					<td>{{this.orderDetails.deliveryDetails.name }}</td>
					<td>{{this.orderDetails.products.product.product_name}}</td>
					<td>{{this.orderDetails.date}}</td>
					<td>{{this.orderDetails.products.product.price}}</td>
					<td>{{this.orderDetails.status}}</td>
                 <td></td>

					<td>
						<!-- Large modal -->
						<button type="button" class="btn btn-primary" data-toggle="modal"
							data-target=".bd-example-modal-lg{{this._id}}">View</button>

						<div class="modal fade bd-example-modal-lg{{this._id}} mt-5" tabindex="-1" role="dialog"
							aria-labelledby="myLargeModalLabel" aria-hidden="true">
							<div class="modal-dialog modal-lg">
								<div class="modal-content">


									<section class="vh-100" style="background-color: #000000; ">
										<div class="container py-5 h-100" style="margin-top: 20px;">
											<div class="row d-flex justify-content-center align-items-center h-100">
												<div class="col-12">
													<div class="card card-stepper text-black" style="border-radius: 16px;">

														<div class="card-body p-5">

															<div class="d-flex justify-content-between align-items-center mb-5">
																<div>
																	<h5 class="mb-0">Price <span class="text-primary font-weight-bold"> â‚¹
																			{{this.orderDetails.products.product.price}}</span></h5>
																</div>
																{{!-- <div class="text-end">
																	<p class="mb-0">Expected Arrival <span>01/12/19</span></p>
																	<p class="mb-0">USPS <span
																			class="font-weight-bold">234094567242423422898</span></p>
																</div> --}}
															</div>

															<ul id="progressbar-2"
																class="d-flex justify-content-between mx-0 mt-0 mb-5 px-0 pt-0 pb-2">

																{{!-- <li class="step0 active text-center" id="step1"></li>
																<li class="step0 active text-center" id="step2"></li>
																<li class="step0 active text-center" id="step3"></li> --}}

																{{#if this.pending}}
																<li class="step0 active text-center" id="step1"></li>
																<li class="step0 text-muted text-end" id="step2"></li>
																<li class="step0 text-muted text-end" id="step3"></li>
																<li class="step0 text-muted text-end" id="step4"></li>
																{{/if}}

																{{#if this.shipped}}
																<li class="step0 active text-center" id="step1"></li>
																<li class="step0 active text-center" id="step2"></li>
																<li class="step0 text-muted text-end" id="step3"></li>
																<li class="step0 text-muted text-end" id="step4"></li>
																{{/if}}

																{{#if this.out_for_delivery}}
																<li class="step0 active text-center" id="step1"></li>
																<li class="step0 active text-center" id="step2"></li>
																<li class="step0 active text-center" id="step3"></li>
																{{!-- <li class="step0 active text-center" id="step1"></li> --}}
																<li class="step0 text-muted text-end" id="step4"></li>
																{{/if}}

																{{#if this.delivered}}
																<li class="step0 active text-center" id="step1"></li>
																<li class="step0 active text-center" id="step2"></li>
																<li class="step0 active text-center" id="step3"></li>
																<li class="step0 active text-center" id="step4"></li>
																{{/if}}

															</ul>
															{{#if this.cancelled}}
															<h1 class="d-flex justify-content-center">This order is no-longer available
															</h1>
															{{else}}
															<div class="d-flex justify-content-between">
																<div class="d-lg-flex align-items-center">
																	<i class="fas fa-clipboard-list fa-3x me-lg-4 mb-3 mb-lg-0"></i>
																	<div>
																		<p class="fw-bold mb-1">Order</p>
																		<p class="fw-bold mb-0">pending</p>
																	</div>
																</div>
																<div class="d-lg-flex align-items-center">
																	<i class="fas fa-box-open fa-3x me-lg-4 mb-3 mb-lg-0"></i>
																	<div>
																		<p class="fw-bold mb-1">Order</p>
																		<p class="fw-bold mb-0">Shipped</p>
																	</div>
																</div>
																<div class="d-lg-flex align-items-center">
																	<i class="fas fa-shipping-fast fa-3x me-lg-4 mb-3 mb-lg-0"></i>
																	<div>
																		<p class="fw-bold mb-1">Order</p>
																		<p class="fw-bold mb-0">Out for delivery</p>
																	</div>
																</div>
																<div class="d-lg-flex align-items-center">
																	<i class="fas fa-box-open fa-3x me-lg-4 mb-3 mb-lg-0"></i>
																	<div>
																		<p class="fw-bold mb-1">Order</p>
																		<p class="fw-bold mb-0">Delivered</p>
																	</div>
																</div>

															</div>
															{{/if}}



														</div>

													</div>
												</div>
											</div>
										</div>
									</section>


								</div>
							</div>
						</div>


					</td>
					{{!-- /modal --}}


              

					{{!-- <td> <a href="/view_product/{{this.orderDetails.products.product._id}}" class="btn"
							style="background-color: rgb(41, 218, 13);">View </a> </td> --}}
							<td> <a href="/view_product/{{this._id}}" class="btn"
							style="background-color: rgb(41, 218, 13);">View </a> </td>
				</tr>
				{{/each}}

			</tbody>
		</table>

	</div>



</div>





{{>user-footer}}




