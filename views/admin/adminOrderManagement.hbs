<!-- Layout wrapper -->
<div class="layout-wrapper layout-content-navbar">
   <div class="layout-container">
      <!-- Menu -->
         {{>aside}}
      <!-- / Menu -->

      <!-- Layout container -->
      <div class="layout-page">
         <!-- Navbar -->
            {{>header}}

         <!-- / Navbar -->

         <!-- Content wrapper -->
         <div class="content-wrapper">
            <!-- Content -->
          <div class="card">
               <h5 class="card-header">Table Basic</h5>
               <div class="table-responsive text-nowrap">
                  <table class="table">
                     <thead>
                        <tr>
                           <th>SL NO</th>

                           <th>DATE</th>
                           <th>USER</th>
                           <th>MOBILE</th>
                           <th>PRICE</th>
                           <th>PAYMENT METHOD</th>

                           <th>STATUS</th>
                           {{!-- <th></th> --}}
                         
                           <th>VIEW</th>

                        </tr>
                     </thead>



                     <tbody class="table-border-bottom-0">
                        {{#each allOrders}}
                        <tr>

                           <td><i class="fab fa-angular fa-lg text-danger me-3"></i> <strong>{{inc @index}}</strong> </td>

                           <td>{{this.orderDetails.date}}</td>
                           <td>{{this.userData.[0].firstname}}</td>


                           <td>{{this.orderDetails.deliveryDetails.phone}}</td>



                           <td>{{this.orderDetails.products.sum}}</td>

                           <td>{{this.orderDetails.paymentMethod}}</td>
                           <td>{{this.orderDetails.status}}</td>

                           <td>
                             
                          
               

                           </td>
                           <td>
                         

                         <!-- End Offcanvas -->
                    <div class="col-lg-3 col-md-6">
                      {{!-- <small class="text-light fw-semibold mb-3">End</small> --}}
                      <div class="mt-3">
                        <button
                          class="btn btn-primary"
                          type="button"
                          data-bs-toggle="offcanvas"
                          data-bs-target="#offcanvasEnd{{this._id}}"
                          aria-controls="offcanvasEnd"
                        >
                          View
                        </button>

                        <div
                          class="offcanvas offcanvas-end"
                          tabindex="-1"
                          id="offcanvasEnd{{this._id}}"
                          aria-labelledby="offcanvasEndLabel"
                        >
                          <div class="offcanvas-header" >
                            <h5 id="offcanvasEndLabel" class="offcanvas-title"></h5>
                            <button
                              type="button"
                              class="btn-close text-reset"
                              data-bs-dismiss="offcanvas"
                              aria-label="Close"
                            ></button>
                          </div>
                          <div class="col">       
                          <div class="d-flex justify-content-center">
                          <img height="50%" width="50%" src="/multerImage/{{this.orderDetails.products.product.img_id.[0]}}">
                         </div>
                         <div class="d-flex justify-content-center mt-5">
                           <h4 style="color: red;">{{this.orderDetails.products.product.product_name}}</h4>
                         </div>
                         <div class="d-flex justify-content-center mt-2">
                           <h4 >price : {{this.orderDetails.products.product.price}}</h4>
                         </div>
                          <div class="d-flex justify-content-center mt-2">
                           <h4 >quantity : {{this.orderDetails.products.quantity}}</h4>
                         </div>

                        
                         </div>
                        </div>
                      </div>
                    </div>
                          

                     <!--/ End Offcanvas -->
                             
                           </td>


                        </tr>
                        {{/each}}
                        
                     </tbody>


                  </table>
               </div>
            </div>
            <!-- Content wrapper -->
         </div>
      </div>
      <!-- / Layout page -->
   </div>
</div>