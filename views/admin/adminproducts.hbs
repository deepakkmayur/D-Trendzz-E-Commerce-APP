<!-- Layout wrapper -->
<div class="layout-wrapper layout-content-navbar">
   <div class="layout-container">

      <!-- Menu -->
      {{>aside}}
      <!-- / Menu -->

      <!-- Layout container -->
      <div class="layout-page">
         <!-- Navbar -->

         {{>header}}

      
         <!-- / Navbar -->

         <!-- Content wrapper -->
         <div class="container">

            <div class="card-body">
                      {{!-- <small class="text-light fw-semibold">Default</small> --}}
                      <div class="demo-inline-spacing">
                      
                        <a href="/admin/add_product"  class="btn btn-success">Add Product</a>   
                       
                      </div>
                    </div>

            <div class="content-wrapper">
               <!-- Content -->


               <div class="card">      
                  <h5 class="card-header">Table Basic</h5>
                  <div class="table-responsive text-nowrap">
                     <table class="table">
                        <thead>
                           <tr>
                              <th>SL NO</th>
                              <th>NAME</th>
                              <th>PRICE</th>
                              <th>DISCOUNT(%)</th>
                              <th>BRAND</th>
                              <th>IMAGES</th>
                             
                              <th>CATEGORY</th>
                               <th>STOCKS</th>
                              <th>ACTIONS</th>
                           </tr>
                        </thead>
                        
                        {{#each products}}    
                        
                        <tbody class="table-border-bottom-0">
                           <tr>
                              <td><i class="fab fa-angular fa-lg text-danger me-3"></i> <strong>{{inc @index}}</strong>    
                              </td>
                              <td>{{this.product_name}}</td>     
                               <td>{{this.price}}</td>
                               <td>{{this.discount}}</td>
                                <td>{{this.brand}}</td>
                            
                              <td>

                                
                                 <ul class="list-unstyled users-list m-0 avatar-group d-flex align-items-center">
                                     {{#each this.img_id}}
                                    <li data-bs-toggle="tooltip" data-popup="tooltip-custom" data-bs-placement="top"
                                       class="avatar avatar-xs pull-up" title="Lilian Fuller">
                                       <img src="/multerImage/{{this}}" alt="image loading" class="rounded-circle" />
                                    </li>
                                    {{/each}}

                                  
                                 </ul>
                              </td>
                               <td>{{this.lookup_category.[0].category_name}}</td>
                              
                              <td>{{this.stock}}</td>
                              <td>
                                 <div class="dropdown">
                                    <button type="button" class="btn p-0 dropdown-toggle hide-arrow"
                                       data-bs-toggle="dropdown">
                                       <i class="bx bx-dots-vertical-rounded"></i>
                                    </button>
                                    <div class="dropdown-menu">
                                       <a class="dropdown-item"  href="/admin/edit_product/{{_id}}"  ><i
                                             class="bx bx-edit-alt me-1"  ></i> Edit</a>                   
                                       <a class="dropdown-item" href="/admin/delete_product/{{_id}}" onclick="return confirm('Do you want to delete ?')"><i   
                                             class="bx bx-trash me-1"></i> Delete</a>
                                    </div>
                                 </div>
                              </td>
                           </tr>
                          
                        </tbody>
                        {{/each}}
                     </table>
                  </div>    
               </div>


            </div>


            <!-- Content wrapper -->
         </div>
      </div>
      <!-- / Layout page -->
   </div>
</div>