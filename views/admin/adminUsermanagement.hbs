<!-- Layout wrapper -->
<div class="layout-wrapper layout-content-navbar">
   <div class="layout-container">

      <!-- Menu -->
      {{>aside}}
      <!-- / Menu -->

      <!-- Layout container -->
      <div class="layout-page">
         <!-- Navbar -->

         {{>header}}


         <!-- / Navbar -->

         <!-- Content wrapper -->
         <div class="container">

            <div class="card-body">

             

            <div class="content-wrapper">
               <!-- Content -->


               <div class="card">
                  <h5 class="card-header">Table Basic</h5>
                  <div class="table-responsive text-nowrap ">
                     <table class="table">
                        <thead>
                           <tr>
                              <th>SL NO</th>
                              <th>NAME</th>
                              <th>EMAIL</th>
                              <th>PHONE</th>
                              {{!-- <th>phone</th> --}}

                                <th>VIEW ORDERS</th>

                              <th>ACTION</th>
                           </tr>
                        </thead>
                        {{#each userdetails}}

                        <tbody class="table-border-bottom-0">
                           <tr>
                              <td><i class="fab fa-angular fa-lg text-danger me-3"></i> <strong>{{@index}}</strong>
                              </td>
                             
                              <td>{{this.firstname}}</td>
                              <td>{{this.email}}</td>
                              <td>{{this.phone}}</td>
                        
                              <td><a href="/admin/admin_viewOrder?id={{this._id}}" class="btn" style="background-color:rgb(17, 251, 130);">view</a></td>

                              <td>
                               
                                 
                                
                                 {{#if this.isblockeduser}}  
                                 <div class="demo-inline-spacing">                      
                                    <a href="/admin/unblock_user/{{_id}}" onclick="return confirm('Do you want to un-block {{this.firstname}} ?')"  class="btn btn-success">Un-Block</a>
                                 </div>
                                 {{else}}
                                  <div class="demo-inline-spacing">
                                    <a href="/admin/block_user/{{_id}}" onclick="return confirm('Do you want to block {{this.firstname}} ?')" class="btn btn-danger" >Block</a>
                                 </div>
                                 {{/if}}

                              </td>








                              <td>
                                 {{!-- <div class="dropdown">
                                    <button type="button" class="btn p-0 dropdown-toggle hide-arrow"
                                       data-bs-toggle="dropdown">
                                       <i class="bx bx-dots-vertical-rounded"></i>
                                    </button>
                                    <div class="dropdown-menu">
                                       <a class="dropdown-item" href="/admin/edit_product/{{_id}}"><i
                                             class="bx bx-edit-alt me-1"></i> Edit</a>
                                       <a class="dropdown-item" href="/admin/delete_product/{{_id}}"
                                          onclick="return confirm('Do you want to delete ?')"><i
                                             class="bx bx-trash me-1"></i>
                                          Delete</a>
                                    </div>
                                 </div> --}}
                              </td>
                           </tr>

                        </tbody>
                        {{/each}}
                     </table>
                  </div>
               </div>


            </div>


            <!-- Content wrapper -->
         </div>
      </div>
      <!-- / Layout page -->
   </div>
</div>