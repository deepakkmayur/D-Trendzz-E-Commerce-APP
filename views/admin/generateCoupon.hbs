<!-- Layout wrapper -->
<div class="layout-wrapper layout-content-navbar">
   <div class="layout-container">
      <!-- Menu -->
          {{>aside}}
      <!-- / Menu -->

      <!-- Layout container -->
      <div class="layout-page">
         <!-- Navbar --> 
          {{>header}}

         <!-- / Navbar -->

         <!-- Content wrapper -->
         <div class="content-wrapper">
            <!-- Content -->
             

  
  <div class="col-sm-6 col-xl-12">
  <div class="container-fluid mt-5">
    <div class="container-fluid mt-5">
      <div class=" rounded h-100 p-4">

        <div class="container ">

          <form action="/admin/generate_coupon" method="POST">


            <div class="mt-5 mb-3">
              <label for="" class="form-label">Coupon code</label>
              <input type="text" class="form-control" required name="coupon_code" id="exampleInputUsername">
            </div>
            <div class="mt-5 mb-3">
              <label for="" class="form-label">Minimum price</label>
              <input type="number" class="form-control" required name="minimum_price" id="exampleInputUsername">
            </div>
             <div class="mb-3">
            <label class="form-label" for="basic-default-bio">Coupon description</label>
            <textarea class="form-control" id="basic-default-bio"  name="coupon_description"  rows="3" required></textarea>
          </div>
            <div class="mt-5 mb-3">
              <label for="" class="form-label">discount</label>
              <input type="number" class="form-control" required minlength="2" maxlength="2" onclick="return alert('discount should be in between 0 and 100 ')"  name="discount" id="exampleInputUsername">
            </div>
            <div class="mt-5 mb-3">
              <label for="" class="form-label">Valid from</label>
              <input type="date" class="form-control" name="validfrom" required id="exampleInputUsername">
            </div>
             <div class="mt-5 mb-3">
              <label for="" class="form-label">Valid till</label>
              <input type="date" class="form-control" name="validtill" required id="exampleInputUsername">
            </div>
            <button type="submit" class="btn btn-primary mt-3">Submit</button>
          </form>

        </div>
      </div>
    </div>
  </div>
</div>
            <!-- Content wrapper -->
         </div>
      </div>
      <!-- / Layout page -->
   </div>
</div>
