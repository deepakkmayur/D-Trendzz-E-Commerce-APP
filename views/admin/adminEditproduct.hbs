                                 {{#each category}}
                                 <option value="men">Men</option>
                                 <option value="women">Women</option>
                                 {{/each}}
                              </select>
                           </div>


                           <div class="mb-3 mt-5">
                              <button type="submit" class="btn btn-success">Edit</button>
